<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_padding_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewIDSong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="New Text"
            android:textColor="@color/colorIDSong"
            android:textSize="@dimen/IDSong_size"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/textViewTitleSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/title_lyric_padding"
                android:paddingTop="@dimen/item_padding_top"
                android:text="New Text"
                android:textSize="@dimen/SongTitle_size" />

            <TextView
                android:id="@+id/textViewShortLyricSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/item_padding_bottom"
                android:text="New Text"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>