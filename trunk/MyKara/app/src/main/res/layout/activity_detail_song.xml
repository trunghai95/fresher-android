<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/item_padding_top"
    android:layout_marginLeft="@dimen/item_padding_horizontal"
    android:layout_marginRight="@dimen/item_padding_horizontal"
    android:layout_marginTop="@dimen/item_padding_top"
    android:orientation="vertical"
    tools:context="com.vng.fresherandroid.mykara.DetailSongActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/item_padding_horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewIDSong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorIDSong"
                android:gravity="center"
                android:text="New Text"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/IDSong_size"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:id="@+id/textViewTitleSong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/title_lyric_padding"
                android:paddingLeft="@dimen/title_lyric_padding"
                android:paddingTop="@dimen/item_padding_top"
                android:text="New Text"
                android:textAlignment="center"
                android:textSize="@dimen/SongTitle_size" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewSinger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_padding_bottom">

        <TextView
            android:id="@+id/textViewSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/item_padding_bottom"
            android:paddingLeft="@dimen/singer_padding"
            android:paddingRight="@dimen/singer_padding"
            android:paddingTop="@dimen/item_padding_bottom"
            android:text="New Text" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewLyric"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/item_padding_bottom">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewFullLyric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/item_padding_bottom"
                android:paddingLeft="@dimen/full_lyric_padding"
                android:paddingRight="@dimen/full_lyric_padding"
                android:paddingTop="@dimen/item_padding_bottom"
                android:text="New Text" />
        </ScrollView>

    </android.support.v7.widget.CardView>
</LinearLayout>
